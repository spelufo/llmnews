[Unit]
Description=LLM News Fetcher
After=network.target

[Service]
Type=oneshot
User=root
WorkingDirectory=/root/llmnews
Environment=PYTHONUNBUFFERED=1
ExecStart=/usr/bin/python3 /root/llmnews/news.py
StandardOutput=append:/var/log/llmnews-fetch.log
StandardError=append:/var/log/llmnews-fetch.log

[Install]
WantedBy=multi-user.target